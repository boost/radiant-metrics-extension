.outset
  %table.index
    %thead
      %tr
        %th Name
        %th Description
        %th Total Count
        %th.modify Modify
    %tbody
      - @db_metrics.each do |metric|
        %tr.node.level_1
          %td
            %a{:href => edit_admin_metric_path(metric)}
              %span.title= metric.name
          %td= metric.description
          %td= metric.count
          %td.remove
            = link_to t('remove'), admin_metric_path(metric), :method => :delete, :confirm => 'Are you sure?'

#actions
  %ul
    %li= link_to image('plus') + ' New metric', new_admin_metric_path